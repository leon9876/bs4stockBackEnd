
@{
    ViewBag.Title = "Login";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<form action="@Url.Action("Login")" method="post">
    <div class="form-horizontal mt-5">
        <fieldset>
            <legend class="text-white ">後台管理系統登入</legend>
            <div class="form-group">
                <label class="control-label col-md-3 text-white mt-2">帳號</label>
                <div class="col-md-9">
                    <input id="id" name="id" type="text" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 text-white mt-2">密碼</label>
                <div class="col-md-9">
                    <input id="pwd" name="pwd" type="password" class="form-control" />
                </div>
            </div>
            <div class="form-group">

                <div class="col-lg-offset-3 col-md-9">
                    <input id="Submit1" type="submit" value="登入" class="btn btn-success" />
                    <input id="Reset1" type="reset" value="重新填寫" class="btn btn-danger" />
                </div>
                <span class="text-white">@ViewBag.Error</span>
            </div>
        </fieldset>
    </div>
</form>
